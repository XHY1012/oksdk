{
  "compilerOptions": {
    // Typecheck
    "pretty": true,
    "strict": true,
    "skipLibCheck": true,

    // Modules
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "es2015",
    "target": "esnext",

    // Libs
    "lib": ["dom", "esnext"],

    // Dir
    "outDir": "./dist",
    "rootDir": "./src"
  }
}
